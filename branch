
#
# show
# -a all
# -v verbose
# -r remote
#

$ git branch
$ git branch -v
$ git branch -vv
$ git branch -a

# add
$ git branch <new-branch>

$ git checkout <new-branch>

# add & checkout
$ git checkout -b <new-branch>

# modify
$ git branch -m <current> <new-branch>

# push branch
$ git push origin <new-branch>

# delete
$ git branch -d <new-branch>

$ git push origin :<new-branch>

# delete remote
$ git push origin --delete <new-branch>


# merge
$ git checkout main
$ git merge bug-fix



